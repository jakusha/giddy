{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"],
      "@themes/*": ["src/themes/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@data/*": ["src/data/*"],
      "@design-system/*": ["src/design-system/*"],
      "@shared/*": ["src/shared/*"],
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
